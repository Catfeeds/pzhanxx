/* pages/fenxiang/fenxiang.wxss */

page {
  height: 100%;
  background-color: #18366d;
  overflow: hidden;
}

.container-fixed {
  z-index: 101;
  position: fixed;
  top:0;
  width: 100%;
  box-sizing: border-box;
}

.status-bar {
  width: 100%;
}

.bar {
  display: flex;
  flex-direction: row;
  width: 100%;
  /* background: #fff; */
  align-items: center;
  justify-content: flex-start;
  padding:10rpx 30rpx;
  box-sizing: border-box;
}

.bar .home{
  display: flex;
  flex-direction: row;

  font-size: 30rpx;
  left: 20rpx;
  width: 48rpx;
  height: 48rpx;
  
}

.bar .home image{
  width: 100%;
  height: 100%;
}


.pageTitle{
  width: 100%;
  height: 600rpx;
  margin-bottom: 40rpx;
}

.my{
  display: block;
  width: 130rpx;
  height: 130rpx;
  margin: 0 auto 50rpx;
}

.myImg{
  border: 2rpx solid #fff;
  border-radius: 50%;
  display: block;
  width: 130rpx;
  height: 130rpx;
}

.fxPage {
  width: 100%;
  padding-bottom: 20rpx;
}

.scrollPage {
  width: 100%;
  height: 100%;
}

.fenxiangBtn{
  width: 100%;
  height: 100rpx;
  margin-bottom: 50rpx;
}

.fenxiangBtnText{
  display: block;
  margin: 0 auto;
  width: 80%;
  height: 100rpx;
  background: #2db7f5;
  border-radius: 10rpx;
  text-align: center;
  line-height: 100rpx;
  color: #fff;

}

.rules {
  width: 90%;
  height: 280rpx;
  margin: 50rpx auto 0;
  padding: 30rpx 0;
  border-radius: 15rpx;
  background: #fff;
}

.rulesTitle {
  display: block;
  width: 100%;
  font-size: 28rpx;
  text-align: center;
  margin-bottom: 20rpx;
}

.rulesText {
  display: block;
  width: 80%;
  margin: 0 auto;
  font-size: 24rpx;
  line-height: 44rpx;
  
}


.friends{
  background: #fff;
  padding: 30rpx 0;
  border-radius: 15rpx;
  width: 90%;
  margin: 0 auto;
}

.friendsList{
  width: 90%;
  margin: 0 auto 20rpx;
}

.fenTip{
  display: block;
  margin-top: 40rpx;
  width: 100%;
  text-align: center;
  font-size: 25rpx;
  color: red;
}

.one{
  display: flex;
  align-items: center;
  width:100%;
  height: 80rpx;
  margin-top: 25rpx;
}

.one+.one{
  border-top: 1px solid #bbbec4;
  padding-top: 20rpx;
}

.fenImg{
  display: block;
  width: 80rpx;
  height: 80rpx;
  float:left;
}

.fenMessage{
  width: calc(100% - 150rpx);
  height: 100%;
  display: block;
  float: left;
}

.fenText{
  padding-left: 25rpx;
  width: 100%;
  float: left;
  color: #666;
  line-height: 40rpx;
  font-size: 25rpx; 
}

.fenText.name{
  color:#333;
  font-weight: bold;
}

.fenAdd{
  width: 80rpx;
  height: 100%;
  /* float: right;  */
  font-size: 32rpx;
  /* position: absolute; */
  
}

.fenAddPoint{
  line-height: 80rpx;
  color: red;
}

.afterTip{
  color: #fff;
  text-align: center;
  font-size: 20rpx;
  margin-top: 30rpx;
}
