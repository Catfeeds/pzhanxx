@import "../../../utils/common.wxss";


.loading-tip {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  color:#909399;
  height:100rpx;
  width: 100%;
  text-align: center;
  margin-bottom: 20rpx;
}

.to-top {
  position: fixed;
  right: 25rpx;
  bottom: 50rpx;
  border-radius: 50%;
  background-color: rgba(0, 0, 0, 0.45);
  height:85rpx;
  width: 85rpx;
  padding:20rpx;
  box-sizing: border-box;
}

.to-top image {
  width: 100%;
  height: 100%;
}

.no-tip {
  background-color: #fff;
  height:80rpx;
  width: 100%;
  text-align: center;
  line-height: 80rpx;
  margin-bottom: 20rpx;
}

.no-tip text {
  font-size: 24rpx;
  color: #8a8a8a;
  margin-top:10rpx;
}