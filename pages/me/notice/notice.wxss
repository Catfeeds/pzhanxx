
swiper {
  height: 100vh;
  width: 100%;
}

swiper-item {
  height: 100%;
  width: 100%;
}

scroll-view {
  height: 100%;
}

.notice {
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  padding:20rpx;
  border-top: 1px solid #F2F6FC;
  width: 100%;
  background-color: #fff;
}

.user {
  display: flex;
  flex-direction: row;
  height: 80rpx;
  align-items: center;
}

.avatar {
  height: 80rpx;
  /* width: 100rpx; */
}

.userinfo-avatar {
  height: 80rpx;
  width: 80rpx;
  border-radius: 50%;
}

.nickname {
  height: 70rpx;
  margin-left: 20rpx;
  /* line-height: 40rpx; */
}

.name {
  font-size: 28rpx;
  font-weight: 700;
}

.time {
  font-size: 22rpx;  
  color: #aaa;
}

.content {
  display: flex;
  flex-direction: column;
  padding-left: 100rpx;
  padding-top:10rpx;
  padding-right: 10rpx;
  
}

.text {
  font-size: 30rpx;
  color:#303133;
}

.module {
  margin-top:15rpx;
  height:120rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  box-sizing: border-box;
  background-color: #f5f5f5;
  padding:10rpx;
}

.module-avatar {
  height:100rpx;
  width: 100rpx;
}

.module-avatar image {
  height:100%;
  width: 100%;
}

.module-content {
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-left:20rpx;
  height:100%;
  width: calc(100% - 120rpx);
  
}

.module-content .module-nickname{
  width: 100%;
  text-align: left;  
  font-size: 28rpx;
  font-weight: 500;
}

.module-content .module-text{
  width: 100%;
  text-align: left;
  font-size: 22rpx;
  color:#909399;
  line-height: 28rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  
}

.loading-more {
  background-color: #fff;
  height:100rpx;
  width: 100%;
}

.loading-more .info {
  display: flex;  
  flex-direction: row;
  height:100rpx;
  width:100%;
  padding-top:20rpx;
  box-sizing: border-box;
  line-height: 50rpx;
  justify-content: center;
  align-items:center;
}

.loading-more view image {
  height: 50rpx;
  width: 50rpx;
}

.loading-more text {
  font-size: 24rpx;
  color: #8a8a8a;
  margin-left: 10rpx;
  
}


.no-tip {
  background-color: #fff;
  height:80rpx;
  width: 100%;
  text-align: center;
  line-height: 80rpx;
  margin-bottom: 20rpx;
}


.no-tip text {
  font-size: 24rpx;
  color: #8a8a8a;
  margin-top:10rpx;
}