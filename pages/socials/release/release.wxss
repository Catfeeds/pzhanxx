.section {
  height: 260rpx;
  width: 100%;
  background-color: #fff;
  padding:20rpx 30rpx 30rpx 30rpx;
  box-sizing: border-box;
  flex-direction: column;
  justify-content: space-between;
}

.section .header {
  height: 60rpx;
  width: 100%;
  font-size: 28rpx;

}


.reply-panel {
  background-color: rgba(0,0,0, .3);
  height:100%;
  width: 100%;
  position: fixed;
  top:0;
}

.reply-input {
  flex: 5;
  background-color: #fff;
  box-sizing: border-box;
  padding: 30rpx 15rpx;
  font-size: 30rpx;
  width: 100%;
  height:220rpx;
}

.textarea {
  height: 100%;
  width: 100%;
}

.placeholder {
  color:#C0C4CC;
  font-size: 30rpx;  
  font-weight: 200;
  width: 100%;
  
}

.send {
  font-size: 28rpx;
  color:#fff;
  line-height: 60rpx;
  width: 90%;
}

button {
  padding: 12rpx;
  background-color: #409EFF;
  position: absolute;
  right: 0;
  left: 0;
  bottom: 100rpx;
}

.send::after {
  border: 0;
}

.photo-panel {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  box-sizing: border-box;
  padding:0rpx 50rpx 30rpx 50rpx;
}

.photos {
  width: 200rpx;
  height: 200rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  background-color: #f1f1f2;
  box-sizing: border-box;
}

.photos image{
  width: 100%;
  height: 100%;
}

.photos .del-icon {
  background-color: rgba(0, 0, 0, 0.5);
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  box-shadow: 1px 1px 1px #333;
  border-radius: 50%;
  z-index:10;
  box-sizing: border-box;
  padding-left:10rpx;
  padding-top:10rpx;
  margin-top: -210rpx;
  margin-left: 150rpx;
}

.photos .del-icon .del{
  width: 30rpx;
  height: 30rpx;
}

.add {
  width: 200rpx;
  height: 200rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  background-color: #f1f1f2;
  padding:70rpx;
  box-sizing: border-box;
}

.add .add-img{
  width: 60rpx;
  height: 60rpx;
}
