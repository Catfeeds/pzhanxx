scroll-view {
   height: calc(100vh - 120rpx);
}
.pic-list {
    box-sizing: border-box;
    padding: 20rpx 10rpx;
    display: flex;
    flex-direction: row;
    text-align: center;
}
.item-view {
    width: 100%;
    float: left;
}
.pic-row {
    width: 90%;
    box-sizing: border-box;
    padding: 12.5rpx;
    border-radius: 5px;
    display: inline-block;
}
.pic {
    border-radius: 4px;
    box-shadow: 1px 1px 3px 2px #e4e7ed;
}

.pic image {
    /* height: 100%; */
    width: 100%;
    height: auto;
}

.loading-tip {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  color:#909399;
  height:80rpx;
  width: 100%;
  text-align: center;
  margin-bottom: 20rpx;
}