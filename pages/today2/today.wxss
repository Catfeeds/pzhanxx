page {
  width: 100%;
  height: 100%;
}

swiper {
  width: 100%;
  height: 100%;
}

swiper-item {
  width: 100%;
  height: 100%;
}

.bg-image {
  position: absolute;
  width: 100%;
  height: 100%;
}
.bg-image image{
  width: 100%;
  height: 100%;
}

.mask {
  position: absolute;
  width: 100%;
  padding:150rpx 30rpx;
  box-sizing: border-box;
  background: linear-gradient(rgba(0,0,0,0), rgba(0,0,0,.5)); /* 标准的语法 */
  z-index: 10;
  bottom: 0;
  display: flex;
  flex-direction: column;
  color: #fff;

}

.date {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.day {
  font-size: 100rpx;
  font-weight: 700;
}

.month-year {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-left: 20rpx;
}

.month {
  font-size: 32rpx;
  font-weight: 700;
}

.year {
  font-size: 32rpx;
  font-weight: 700;
}

.word {
  margin-top: 40rpx;
  font-weight: 700;
  font-size: 34rpx;
  border-top: 1rpx solid #fff;
  border-bottom: 1rpx solid #fff;
  padding: 40rpx 0;
}

.load-mask {
  position: absolute;
  width: 100%;
  height: 100%;
  background: #000;
  top:0;
  z-index: 11;
}