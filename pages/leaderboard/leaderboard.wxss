.popup-row {
    background-color: #f5f5f5;
}

.ui-row {
    position: relative;
    flex: 1;
    display: flex;
    justify-content: center;
}

.ui-col-3 {
    float: left;
    height: 100%;
    width: 25%;
}

.ui-col {
    position: relative;
    min-width: 0;
    display: flex;
    flex: 1;
    /* height:100%; */
}

.ui-col-content {
    height: 100%;
    min-width: 0;
    flex-direction: column;
    width: 100%;
    display: flex;
}

.popup-content .time-tabs-year {
    font-size: 28rpx;
    height: 50rpx;
    display: flex;
    align-items: center;
    color: #999;
    margin-top: 20rpx;
    padding-left: 10rpx;
}

.time-tabs-year {
    font-size: 28rpx;
    height: 50rpx;
    display: flex;
    align-items: center;
    color: #999;
    margin-top: 20rpx;
    padding-left: 10rpx;
}

.ui-v-tab {
    padding: 14px 18px;
    font-size: 14px;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    width: 100%;
    position: relative;
}

.ui-v-tabs {
    display: inline-block;
    position: relative;
    height: 100%;
}

.ui-choice {
    font-size: 13px;
    padding: 8px 0;
    font-weight: 500;
    color: #333;
    width: 80px;
    border-right: 0px solid #333;
}

.ui-nochoice {
    font-size: 13px;
    padding: 8px 0;
    font-weight: 300;
    color: #999;
    width: 80px;
}

.active {
    position: absolute;
    width: 40rpx;
    height: 8rpx;
    background-color: #333;
    left: 0;
}

.popup-scroll-view {
    display: block;
    width: 100%;
}

.month-box {
    display: flex;
    flex-wrap: wrap;
    background-color: #f5f5f5;
    align-content: flex-start;
    padding-bottom: 30rpx;
}

.month-list-box {
    flex: 0 0 50%;
    height: 218rpx;
    margin-top: 20rpx;
}

.month-list {
    background-color: #fff;
    width: 92%;
    height: 100%;
    border-radius: 8rpx;
}

.month-day {
    text-align: center;
    font-size: 80rpx;
    font-weight: lighter;
    height: 140rpx;
}

.month-year {
    /* color: #333;
    font-size: 30rpx;
    padding-left: 12rpx;
    font-weight: lighter;
    padding-top: 10rpx; */
    border: none;
    padding: 0.6em 1.2em;
    background: #c0392b;
    color: #fff;
    font-family: 'Lato', Calibri, Arial, sans-serif;
    font-size: 1em;
    letter-spacing: 1px;
    text-transform: uppercase;
    cursor: pointer;
    display: inline-block;
    margin: 3px 2px;
    border-radius: 2px;
}

.month-year-box {
    flex: 0 0 50%;
    margin-top: 20rpx;
}

.year-list {
    /* background-color: #fff; */
    width: 92%;
    height: 100%;
    border-radius: 8rpx;
}

.month-line {
    width: 100%;
    height: 2rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.month-line text {
    width: 50rpx;
    height: 2rpx;
    background-color: #bfbfbf;
    margin-left: 10rpx;
    margin-top: 10rpx;
}

.title {
    color: #333;
    font-size: 28rpx;
    padding-left: 12rpx;
    font-weight: lighter;
    padding-top: 10rpx;
    text-align: center;
}

.yi {
    color: red;
    display: block;
    /* width: 50%;
    float: left; */
}

.yit {
    width: 50%;
    display: block;
    float: right;
    text-align: left;
}

.dian {
    color: #333;
    font-size: 28rpx;
    height: 12rpx;
    padding-left: 12rpx;
    text-align: center;
}

.dian-select {
    background: red;
}

.dian-unselect {
    background: #f09cc6;
}

.dianyit {
    width: 50%;
    display: block;
    float: right;
}

/*  */
swiper {
  height: calc(100vh - 120rpx);
  width: 100%;
}

swiper-item {
  height: 100%;
  width: 100%;
}

scroll-view {
  height: 100%;
}

.loading-tip {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  color:#909399;
  height:80rpx;
  width: 100%;
  text-align: center;
  margin-bottom: 20rpx;
}

.to-top {
  position: fixed;
  right: 25rpx;
  bottom: 50rpx;
  border-radius: 50%;
  background-color: rgba(0, 0, 0, 0.45);
  height:85rpx;
  width: 85rpx;
  padding:20rpx;
  box-sizing: border-box;
}

.to-top image {
  width: 100%;
  height: 100%;
}

.hot-tab {
  display: flex;
  flex-direction: row;
  height: 80rpx;
  align-items: center;
  justify-content: space-around;
  padding:0 50rpx;
  color: #909399;
  font-size: 26rpx;
}

.hot-tab-fixed {
  position: fixed;
  width: 100%;
  display: flex;
  flex-direction: row;
  height: 80rpx;
  align-items: center;
  justify-content: space-around;
  background: #fff;
  color: #909399;
  font-size: 26rpx;
  z-index: 20;
}

.hot-tab .hot-bar{
  width: 150rp;
  text-align: center;
}

.select {
  color: #E6A23C;
  font-size: 30rpx;
  font-weight: 500;
}
