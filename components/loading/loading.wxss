.loading {
  
  z-index: 99;
  background-color: #fff;
  height: 100%;
  width: 100%;
  position: fixed;
  top:0;
}

.loading view {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: absolute;
  margin: auto;  
  top: 0;
  bottom: 0;
  right: 0;
  left: 0;
  height:400rpx;
  width:400rpx;
}

.loading view image {
  height: 64rpx;
  width: 64rpx;
}

.loading view text {
  font-size: 24rpx;
  color: #8a8a8a;
  margin-top: 10rpx;
}
