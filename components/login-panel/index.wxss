.bg {
  position: fixed;
  top:0;
  height: 100%;
  width: 100%;
  background-color: rgba(0, 0, 0, 0.3);
  z-index: 30;
  display: flex;
  justify-content: center;
}

.panel{
  width: 540rpx;
  height:700rpx;
  background-color: #fff;
  position: absolute;
  top:250rpx;
  padding:10rpx;
  border-radius: 15rpx;
  text-align: center;
  box-sizing: border-box;
  animation: show 0.5s linear;
}

@keyframes show
{
 	0%{transform: translateY(50px);opacity: 0;}
	100%{ transform: translateY(0px);opacity: 1;}
}

.cancel {
  width: 540rpx;
  height:100rpx;
  margin-top:220rpx;
  margin-left:50rpx;
  text-align: right;
  z-index:10;
  animation: show 0.5s linear;
  
}


.cancel image{
  width: 65rpx;
  height:65rpx;
  background-color: rgba(0, 0, 0, 0.3);
  border-radius: 50%;
  
}

.image {
  height: 340rpx;
  width: 520rpx;
}

.image .thumb{
  width: 100%;
  height: 100%;
}

.logo {
  width: 100%;
  height:120rpx;
  background-color: #fff;
  text-align: center;
  padding:10rpx;
  box-sizing: border-box;
  margin-top:30rpx;
}

.logo image {
  width: 280rpx;
  height: 90rpx;
}

.btn {
  height: 65rpx;
  width: 100%;
  margin-top:30rpx;
  padding:0 120rpx;
  box-sizing: border-box;
  margin-bottom:5rpx;
}

.login {
  display: flex;
  flex-direction: row;
  background: linear-gradient(to right, #66ccff, #33ccff);
  font-size: 26rpx;
  color: #fff;
  border-radius: 35rpx;
  align-items: center;
  justify-content: center;
  /* width: 50%; */
}

.btn botton {
  padding: 0;
}

.icon {
  width: 40rpx;
  height: 40rpx;
}

.text {
  margin-left:6rpx;
}


.login::after {
  border: 0;
}

.text-tips {
 font-size: 20rpx;
 color: #8a8a8a;
}