.container {
    width: 100%;
    background: #fff;
    box-sizing: border-box;
    z-index: 101;
}

.container-fixed {
    position: fixed;
    top: 0;
    width: 100%;
    background: #fff;
    box-sizing: border-box;
    z-index: 101;
}

.status-bar {
    width: 100%;
}

.bar {
    width: 100%;
    background: #fff;
    display: flex;
    flex-direction: row;
}

.bar  .back {
    display: flex;
    flex-direction: row;
    font-size: 30rpx;
    position: absolute;
    left: 20rpx;
    width: 45rpx;
    height: 45rpx;
    margin-top: 2rpx;
}

.bar  .back image {
    width: 100%;
    height: 100%;
}

.tabs {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-around;
    height: 100%;
    width: 35%;
    margin-left: 10%;
    padding: 10rpx 0;
    box-sizing: border-box;
    color: #606266;
}

.tabs .tab {
    display: flex;
    flex-direction: row;
    align-items: center;
    height: 100%;
    font-size: 30rpx;
    box-sizing: border-box;
}

.choose {
    font-weight: 500;
    color: #303133;
    border-bottom: 2px #409eff solid;
}

.dot {
    height: 15rpx;
    width: 15rpx;
    background: #d81e06;
    border-radius: 50%;
    position: absolute;
    margin-top: -24rpx;
    margin-left: -20rpx;
}

/* 日期 */

.pop-tab {
    display: flex;
    flex-direction: row;
    align-items: center;
    height: 100%;
    padding-left: 10px;
    box-sizing: border-box;
}

.all-container {
    display: inline-flex;
    flex-direction: row;
    line-height: 30px;
}

.index-container {
    display: flex;
    flex-direction: row;
    align-items: baseline;
}

.plain {
    font-size: 16px;
}

.index {
    font-size: 40rpx;
    font-weight: 800;
    margin-right: 8rpx;
}

.vertical-line {
    margin-right: 7px;
    height: 22px;
    border-left: 1px solid black;
}

.date {
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.month {
    font-size: 26rpx;
    line-height: 26rpx;
    padding-bottom: 2px;
    margin-right: 2rpx;
    box-sizing: border-box;
}

.year {
    font-size: 20rpx;
    line-height: 20rpx;
    padding-bottom: 3px;
    box-sizing: border-box;
}
